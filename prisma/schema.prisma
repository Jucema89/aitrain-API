// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Train {
  id                     String               @id @default(uuid())
  files                  File[]
  name                   String
  role_system            String               @default("")
  modelGeneratorData     String               @default("")
  openAiKey              String
  type_answer            TypeAnswer
  questions              TrainQuestions[]
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
}

model TrainQuestions {
  id                     String               @id @default(uuid())
  trainId                String
  train                  Train                @relation(fields: [trainId], references: [id])
  questionsAndAnswer     QuestionAnswer[]
}

model QuestionAnswer {
  id                     String               @id @default(uuid())
  trainQuestionId        String
  trainQuestion          TrainQuestions       @relation(fields: [trainQuestionId], references: [id])
  question               String
  answer                 String
}

model File {
  id                     String               @id @default(uuid())
  train                  Train                @relation(fields: [trainId], references: [id])
  trainId                String
  fieldName              String
  type                   TypeFile
  name                   String
  link                   String
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
}

enum TypeAnswer {
  alls
  short
  long_explained
}

enum TypeFile {
  excel
  application
  pdf
  word
  image
  video
  audio
  presentation
  other
}
